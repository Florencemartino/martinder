
<ul id="slides">
  <% @users.each_with_index do |user, i| %>

    <li class="slide <%= 'showing' if i == 0 %>" data-id="<%=user.id%>" >
       <% if user.photos.length > 0 %>
        <% user.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 500, width: 300, crop: :fill %>
        <% end %>
      <% end %>
      <span class="user-details"> <%= user.nickname %> </span> 
    </li>
  <% end%>
</ul>

<div id='slide-controls'>
  <span id="approve"><i class="fa fa-times-circle fa-3x"></i></span>
  <span id="decline"><i class="fa fa-heart fa-3x"></i></span>
</div>



