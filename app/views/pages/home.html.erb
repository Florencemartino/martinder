 <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <div class="flexbox home-container container">
      <div class="item row">
        <div class="col-12 col-lg-4">
          <p>
            <span id="banner-typed-text"></span>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-12 col-lg-4">
          <% if @user.photos.length > 0 %>
            <% @user.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 50, width: 50, crop: :fill, :radius=>"max" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="home-container">
      <div class="item row">
        <div class="col-12 col-lg-4">
          <p>  Que veux-tu faire aujourd'hui ?</p>
          <div class="item">
            <%= link_to "Matcher !", matches_path, :class => "btn btn-primary" %>
          </div>
          <div  class="item">
            <%= link_to "Voir mes discussions !", conversations_path, :class => "btn btn-primary" %>
          </div>
          <div  class="item">
            <%= link_to "Pimper mes Photos !", edit_user_path(@user.id, :profil => false), :class => "btn btn-primary" %>
          </div>
          <div  class="item">
            <%= link_to "Pimper mon Profil !", edit_user_path(@user.id, :profil => true), :class => "btn btn-primary" %>
          </div>
            <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" class="item">
    Je veux un compliment
  </button>
        </div>
      </div>
    </div>
  </div>



  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% compliments = 
          [
            "Tu es un vrai canon de beauté", 
            "Tu es ma star", 
            "Tu as un corps de rêve", 
            "Coucou beauté fatale"
          ]%>
        <%= compliments[rand(0..3)] %>      
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Merci !</button>
        </div>
      </div>
    </div>
  </div>
</div>